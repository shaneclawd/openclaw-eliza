# ElizaOS - Runtime with tsx (no build needed)
FROM oven/bun:latest

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y git python3 make g++ && rm -rf /var/lib/apt/lists/*

# Copy everything
COPY . .

# Install dependencies
RUN bun install

# Install tsx for TypeScript execution
RUN bun add -g tsx

# Expose port
EXPOSE 3000

# Start directly with tsx (no build step)
ENV NODE_ENV=production
CMD ["bun", "run", "--bun", "packages/cli/src/index.ts", "start"]