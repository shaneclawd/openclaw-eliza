# ElizaOS - Runtime with Bun
FROM oven/bun:latest

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y git python3 make g++ && rm -rf /var/lib/apt/lists/*

# Copy everything
COPY . .

# Install dependencies at root
RUN bun install

# Explicitly install config package dependencies  
RUN cd packages/config && bun install

# Expose port
EXPOSE 3000

# Start with bun
ENV NODE_ENV=production
CMD ["bun", "start"]