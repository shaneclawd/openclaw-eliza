# Server
SERVER_PORT=3000
NODE_ENV=production

# API Keys (REQUIRED - you need to add these in Railway dashboard)
OPENAI_API_KEY=sk-your-openai-key-here
# OR use Anthropic
ANTHROPIC_API_KEY=sk-your-anthropic-key-here

# Database (Railway provides PostgreSQL)
POSTGRES_URL=${{Postgres.DATABASE_URL}}
# Fallback to SQLite if no Postgres
PGLITE_DATA_DIR=.eliza/data

# Character
REMOTE_CHARACTER_URLS=

# Server Auth (optional but recommended)
ELIZA_SERVER_AUTH_TOKEN=your-secure-token-here

# UI
ELIZA_UI_ENABLE=false